import BaseLayout from './../layouts/BaseLayout.astro'
import { Image } from "astro:assets";

import fetchApi from "../lib/strapi";

const locations = await fetchApi({
  endpoint: "locations",
  wrappedByKey: "data",
  query: { populate: "*"  },
});


