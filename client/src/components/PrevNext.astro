---
const { prev, next, path } = Astro.props;
---

<style>
  nav {
    background-color: white;
    border-radius: var(--border-radius-xl);
    margin-right: auto;
    margin-left: auto;
    padding: var(--s1) var(--s4);
    max-width: var(--maxContent);
  }

  ul {
    display: flex;
    justify-content: space-between;
  }

  .right {
    margin-left: auto;
  }
</style>

<nav>
  <ul class="nextPrev__wrapper">
    {
      prev && (
        <li>
          <a class="button prev" href={`${import.meta.env.BASE_URL}/${path}/${prev.id}`}>&lt Previous Location</a>
        </li>
      )
    }
    {
      next && (
        <li class="right">
          <a class="button next" href={`${import.meta.env.BASE_URL}/${path}/${next.id}`}> Next Location &gt</a>
        </li>
      )
    }
  </ul>
</nav>
<style>
  .nextPrev__wrapper{
    display: flex;
    gap: 10rem;
    margin: 5rem 0rem;
  }
  .button{
    background-color: darkolivegreen;
    padding: 1rem 1.5rem;
    border-radius: 5px;
    color: white;
    text-decoration: none;
  }
</style>